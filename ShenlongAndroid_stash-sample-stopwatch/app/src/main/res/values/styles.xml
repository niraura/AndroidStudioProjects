<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/Background</item>
    </style>

    <!-- 文字スタイル -->
    <style name="LargeText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/DarkBGText</item>
    </style>
    <style name="MediumText" parent="LargeText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SmallText" parent="LargeText">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="StopwatchText" parent="LargeText">
        <item name="android:textSize">60sp</item>
    </style>

    <!-- カスタムボタン　枠線○ボタン -->
    <style name="CircleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="cornerRadius">50dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:width">100dp</item>
        <item name="android:height">100dp</item>
    </style>

    <!-- カスタムボタンではないけどアプリ内ボタンとして定義する標準のボタン -->
    <style name="NormalButton" parent="Widget.MaterialComponents.Button.TextButton">
    </style>

</resources>
